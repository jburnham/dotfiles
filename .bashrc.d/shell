export EDITOR=vim

OS=`uname -s`

# if we're running on a mac, use macvim for commit messages
if [ "$OS" == "Darwin" ]
then
    export EDITOR='mvim -v'
fi

if [[ "$TERM" =~ ^(screen) ]]
then
    print_host() {
    export SHORTHOST=$(echo ${HOSTNAME} | sed 's/\.jburnham\.net$//')
    echo -ne "\033k${SHORTHOST}\033\\" 1>&2
    }

    PROMPT_COMMAND="print_host"
fi
